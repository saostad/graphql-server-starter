{
  "name": "typescript-graphql-server",
  "version": "0.0.5",
  "description": "Production ready starter for typescript node graphql server project",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/graphql-server-starter.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "gen-docs": "typedoc src/index.ts",
    "postgen-docs": "node ./config/github.js",
    "tag": "node ./config/tag.js",
    "auto-changelog": "auto-changelog --hide-credit --breaking-pattern \"breaking:\"",
    "gen-changelog": "npm run auto-changelog && git add CHANGELOG.md && git commit -m \"doc: change log\"",
    "vulnerability-scan": "node ./config/vulnerability-scan.js",
    "obfuscate": "javascript-obfuscator ./dist --output ./obfuscated --compact true --ignore-require-imports true",
    "compile": "pkg ./obfuscated/index.js --out-path ./compile --options max_old_space_size=4096",
    "tsc": "tsc",
    "prepublishOnly": "npm-run-all -s tsc vulnerability-scan gen-docs",
    "postpublish": "npm-run-all -s tag gen-changelog",
    "precompile": "npm-run-all -s tsc obfuscate",
    "predocker:build": "tsc",
    "docker:build": "node ./config/docker-build.js",
    "inspect": "node --inspect --trace-warnings --unhandled-rejections=strict dist/index.js",
    "tsc:watch": "tsc --watch --preserveWatchOutput",
    "dev:scripts": "npm-run-all -p -c tsc:watch inspect",
    "dev": "set NODE_ENV=development&& nodemon --delay 2.5 --watch dist --exec \"npm run dev:scripts\"",
    "start": "node ./config/clean-start.js && npm run dev",
    "prod": "set NODE_ENV=production&& node --trace-warnings --unhandled-rejections=strict dist/index.js"
  },
  "keywords": [
    "node",
    "typescript",
    "boilerplate",
    "starter",
    "graphql",
    "server"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/passport-azure-ad": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "auto-changelog": "^2.2.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express-pino-logger": "^5.0.0",
    "javascript-obfuscator": "^2.10.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "snyk": "^1.438.0",
    "strip-json-comments": "^3.1.1",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@apollo/federation": "^0.21.0",
    "apollo-server-express": "^2.19.2",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fast-node-logger": "^1.4.10",
    "graphql": "^15.4.0",
    "helmet": "^4.4.1",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  }
}
